{
  "name": "n8n-nodes-hotmart-api",
  "version": "0.1.3",
  "description": "n8n community node for Hotmart API integration - Sales, Subscriptions, Products and Members Area",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "hotmart",
    "api",
    "sales",
    "subscriptions",
    "members"
  ],
  "license": "MIT",
  "homepage": "https://github.com/luccamrofc/n8n-nodes-hotmart-api.git",
  "author": {
    "name": "Lucca Maia",
    "email": "lucmairod2@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luccamrofc/n8n-nodes-hotmart-api.git"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
    "lintfix": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts' --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/HotmartApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Hotmart/Hotmart.node.js",
      "dist/nodes/HotmartTrigger/HotmartTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
